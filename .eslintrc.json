{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended" // Next.js specific linting rules
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@next/eslint-plugin-next" // Next.js plugin
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Not required in Next.js
    "react/no-unescaped-entities": "error", // To catch issues like unescaped quotes
    "semi": ["error", "always"], // Enforce semicolons
    "quotes": ["error", "single"], // Enforce single quotes
    "indent": ["error", 2], // 2 spaces indentation
    "no-unused-vars": "warn" // Warn about unused variables
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the React version
    }
  }
}
