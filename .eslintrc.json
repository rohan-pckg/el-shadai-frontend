{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended" // Next.js specific linting rules
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@next/eslint-plugin-next" // Next.js plugin
  ],
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the React version
    }
  }
}
